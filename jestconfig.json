{
  "transform": {
    "^.+\\.tsx?$": "ts-jest",
    "^.+\\.jsx?$": "babel-jest"
  },
  "testRegex": "/tests/.*\\.test\\.(tsx?)$",
  "moduleNameMapper": {
    "^antd/es/(.+)$": "antd/lib/$1"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!(react-phone-hooks)/)"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/examples"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "testTimeout": 100000,
  "testEnvironment": "jsdom"
}
